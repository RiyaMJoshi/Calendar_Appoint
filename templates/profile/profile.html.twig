{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<div class="d-flex">
    <div class="mt-4 bg-dark col-md-2">
        {% include "profile/sidebar.html.twig" %}
    </div>
    <div class="example-wrapper col-md-8">
        <h1 class="mb-4">Hello User!</h1>

        <span class="text-capitalize text-primary">Check your profile here</span>
        <ul class="fs-6">
            <li>Name: Riya Joshi</li>
            <li>Email: riyajoshi312@gmail.com</li>
            <li>Workplace: Simform Solutions</li>
            <li>Work Email: riya.j@simformsolution.com</li>
            <li>Location: Ahmedabad, Gujarat, India</li>
        </ul>

        <span class="text-capitalize text-primary">Your booking details</span>
        <ul class="fs-6 text-dark">
            <li>Registered Name: {{ name }} </li>
            <li>Email ID: {{ app.request.get('invitee_email') }}</li>
            <li>You've Meeting with: {{ host }} </li>
            <li>Event Type: {{ event }}</li>
            <li>Scheduled From: {{ app.request.get('event_start_time') }} <span class="text-secondary"> To </span> {{ app.request.get('event_end_time') }}</li>
        </ul>

        <span class="text-capitalize">Get your appointments booked with us now at any time from anywhere! </span>
        <br/>
        <!-- Calendly link widget begin -->
        <div>
            <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/riyajoshi-sal/customer-meeting?hide_gdpr_banner=1&primary_color=9d6328'});return false;" class="link-widget-home">Finalize Meeting with Us</a>
        </div>  
        <!-- Calendly link widget end -->

        <button type="button" class="btn btn-primary" name="myBtn">Button </button>
    </div>
</div>

{% block javascripts %}
    <script>
        $(document).ready(function(){
            console.log($("#sidebarProfile").children(".nav-item").children(".nav-link").addClass("text-secondary"));
        });
    </script>

    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
	<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
	<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
{% endblock %}
{% endblock %}
